---
import LayoutRoot from "@layouts/LayoutRoot.astro";
// Components
import PreviewSvelte from "./Preview.svelte";
import {
  Card as CardReact,
  CardTitle,
  CardArticle,
  CardFooter,
} from "@components/Card/Card.tsx";
import CardAstro from "@components/Card/Card.astro";
---

<!-- prettier-ignore -->
<LayoutRoot title="Homepage" classList="p-10 space-y-10">

    <header class="space-y-4">
        <a href="/">&larr; Go back</a>
        <h1 class="h1">Cards</h1>
    </header>

    <hr class="block bg-white/10 border-0 h-[1px]" />

    <!-- Elements -->
    <section class="space-y-4">
      <h2 class="h2">Elements</h2>
      <!-- Card -->
      <a href="https://skeleton.dev/" class="card bg-slate-800 space-y-2">
        <h2 class="h2">Card Element</h2>
        <article>
          <p>This Element article.</p>
        </article>
        <footer>
          <p>The Element footer.</p>
        </footer>
      </a>
    </section>

    <!-- Components -->
    <section class="space-y-4">
      <header class="space-y-2">
        <h2 class="h2">Components</h2>
        <p class="opacity-50">Note that Skeleton has no plans to introduce a Card component. <u>This is for testing only</u>.</p>
      </header>

      <!-- Svelte -->
      <h3 class="h3">Svelte</h3>
      <!-- NOTE: Astro does not accept Snippets; see `Preview.svelte` -->
      <!-- @ts-ignore -->
      <PreviewSvelte />

      <!-- React -->
      <h3 class="h3">React</h3>
      <CardReact
        href="https://react.dev/"
        rootBg="bg-blue-500"
      >
        <CardTitle>React Card Component</CardTitle>
        <CardArticle>The React component article.</CardArticle>
        <CardFooter>The React component footer.</CardFooter>
      </CardReact>

      <!-- Astro -->
      <h3 class="h3">Astro</h3>
      <CardAstro
        href="https://docs.astro.build/"
        rootBg="bg-indigo-500"
      >
        <Fragment slot="title">Astro Card Component</Fragment>
        <Fragment slot="article">The Astro component article.</Fragment>
        <Fragment slot="footer">The Astro component footer.</Fragment>
      </CardAstro>
      
  </section>

</LayoutRoot>
